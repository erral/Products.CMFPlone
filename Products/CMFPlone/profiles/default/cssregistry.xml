<?xml version="1.0"?>
<object name="portal_css" meta_type="Stylesheets Registry">

    <!-- Reset / normalizer / main and toolbar -->
    <stylesheet
        cacheable="False" 
        compression="none" 
        cookable="True" 
        enabled="True"
        dev="True"
        main="True"
        bundle="default"
        rel="stylesheet/less"
        id="++plone++static/plone.less"
        compile="True"
        component="plone"
        deps="mockup-patterns-pickadate"
        />

    <!-- For each widget we need to register it -->

    <!-- Pick a date -->
    <stylesheet
        cacheable="False" 
        compression="none" 
        cookable="True" 
        enabled="True" 
        dev="True"
        id="++plone++static/components/pickadate/lib/themes/classic.css"
        component="picker"
        />

    <stylesheet
        cacheable="False" 
        compression="none" 
        cookable="True" 
        enabled="True" 
        dev="True"
        id="++plone++static/components/pickadate/lib/themes/classic.date.css"
        component="picker_date"
        />

    <stylesheet
        cacheable="False"
        compression="none"
        cookable="True"
        enabled="True"
        dev="True"
        id="++plone++static/components/pickadate/lib/themes/classic.time.css"
        component="picker_time"
        />
    
    <!-- pickadate pattern -->
    <stylesheet
        cacheable="False" 
        compression="none" 
        cookable="True" 
        enabled="True" 
        dev="True"
        id="++resource++mockup/less/patterns/pickadate.less" 
        rel="stylesheet/less"
        component="mockup-patterns-pickadate"
        compile="True"
        deps="picker_time, picker, picker_date"
        />


    <stylesheet id="RTL.css"
                expression="python:portal.restrictedTraverse('@@plone_portal_state').is_rtl()" />

</object>
